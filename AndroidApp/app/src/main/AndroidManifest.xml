<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.cookingmatesapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CookingMatesApp"
        android:usesCleartextTraffic="true">
        <activity android:name="com.FindCookingMatesActivity"></activity>
        <activity android:name="com.ResetPassword" /> <!-- Help activity -->
        <activity
            android:name="com.HelpActivity"
            android:label="CookingMates"
            android:theme="@style/Theme.CookingMatesApp.NoActionBar" /> <!-- About activity -->
        <activity
            android:name="com.AboutActivity"
            android:label="CookingMates"
            android:theme="@style/Theme.CookingMatesApp.NoActionBar" /> <!-- Settings activity -->
        <activity
            android:name="com.SettingsActivity"
            android:label="CookingMates"
            android:theme="@style/Theme.CookingMatesApp.NoActionBar" /> <!-- Profile activity -->
        <activity
            android:name="com.ProfileActivity"
            android:label="CookingMates"
            android:theme="@style/Theme.CookingMatesApp.NoActionBar" /> <!-- Recipe activity -->
        <activity
            android:name="com.RecipeActivity"
            android:label="CookingMates"
            android:theme="@style/Theme.CookingMatesApp.NoActionBar" /> <!-- Home activity -->
        <activity
            android:name="com.HomeActivity"
            android:label="CookingMates"
            android:theme="@style/Theme.CookingMatesApp.NoActionBar" /> <!-- Main activity -->
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.CookingMatesApp.NoActionBar" /> <!-- Register User -->
        <activity
            android:name="com.RegisterUser"
            android:label="@string/app_name"
            android:theme="@style/Theme.CookingMatesApp.NoActionBar" /> <!-- Create recipe activity -->
        <activity
            android:name="com.CreateRecipeActivity"
            android:label="CookingMates"
            android:theme="@style/Theme.CookingMatesApp.NoActionBar" /> <!-- update recipe activity -->
        <activity
            android:name="com.UpdateDeleteRecipeActivity"
            android:label="CookingMates"
            android:theme="@style/Theme.CookingMatesApp.NoActionBar" /> <!-- search recipe -->
        <activity
            android:name="com.SearchRecipe"
            android:label="CookingMates"
            android:theme="@style/Theme.CookingMatesApp.NoActionBar" /> <!-- Menu activity -->
        <activity
            android:name="com.MenuActivity"
            android:label="CookingMates"
            android:theme="@style/Theme.CookingMatesApp.NoActionBar" /> <!-- Login activity -->
        <activity
            android:name="com.LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.CookingMatesApp.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>