<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.cookingmatesapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CookingMatesApp">
        <activity android:name="com.RecipeActivity"></activity>
        <activity
            android:name="com.HomeActivity"
            android:label="CookingMates"
            android:theme="@style/Theme.CookingMatesApp.NoActionBar"></activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.CookingMatesApp.NoActionBar"></activity>
        <activity
            android:name="com.RegisterUser"
            android:label="@string/app_name"
            android:theme="@style/Theme.CookingMatesApp.NoActionBar"></activity>
        <activity android:name="com.CreateRecipeActivity"></activity>
        <activity android:name="com.UpdateDeleteRecipeActivity" />
        <activity android:name="com.SearchRecipe" />
        <activity android:name="com.MenuActivity"></activity>
        <activity
            android:name="com.LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.CookingMatesApp.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>